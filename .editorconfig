[*.{kt,kts}]
    ktlint_code_style = ktlint_official
    ktlint_standard_no-line-break-before-assignment = disabled
    ktlint_standard_class-signature = disabled
    ktlint_standard_function-signature = disabled
    ktlint_standard_multiline-expression-wrapping = disabled
    ktlint_standard_if-else-wrapping = disabled
    ktlint_standard_multiline-if-else = disabled
    ktlint_standard_chain-method-continuation = disabled
    ktlint_standard_trailing-comma-on-declaration-site = disabled

    ktlint_function_naming_ignore_when_annotated_with=Composable,Kotest

    ij_kotlin_packages_to_use_import_on_demand=br.com.gabryel.reginarsanguine.domain.Failure.*,br.com.gabryel.reginarsanguine.domain.matchers.*
    ij_kotlin_name_count_to_use_star_import_for_members = 99
    ij_kotlin_name_count_to_use_star_import = 99

[**/generated/**/*]
    ktlint = disabled